#!/bin/bash


source `dirname $0`/commons

if [ -z "$BUILDDIR" ];
then
    echo "Plese inform name of the subject you want to analyze"
    exit
fi

mkdir -p ${BUILDDIR}

######## compile splat
find "${SRCDIR}" -name "*.java" | \
    xargs javac -cp $CP -d ${BUILDDIR}

######## compile splat subjects
SRCDIR="${PROJ_HOME}/src-subjects-splat"
find "${SRCDIR}" -name "*.java" | \
    xargs javac -cp $CP -d ${BUILDDIR}

